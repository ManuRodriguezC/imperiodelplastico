---
  const { id } = Astro.props
---
<div class="w-full relative">
  <input
    class="bg-white text-lg px-5 w-auto py-1 rounded-full focus:outline-none focus:border-0 focus:ring-0"
    type="text"
    placeholder="Buscar productos..."
    id={`searchInput-${id}`}
    autocomplete="off"
  />

  <ul id={`results-${id}`} class="bg-white rounded-lg mt-2 shadow-md absolute top-10 w-auto">

</div>

