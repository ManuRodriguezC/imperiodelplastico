---
const { nombre, descripcion, imagen, medidas } = Astro.props;
---
<div class="w-full flex flex-col md:flex-row gap-10 justify-around items-center mt-10">
  <div 
    class="w-[300px] h-[300px] lg:w-[400px] lg:h-[400px] xl:w-[500px] xl:h-[500px] 
      flex justify-center items-center shadow-2xl border-product-2 bg-gray-200">
    <img src={imagen} alt={nombre} class="w-[450px] h-auto"  style="view-transition-name: image-product;">
  </div>
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-black text-5xl text-center">{nombre}</h2>
    <p class="text-gray-500 font-serif py-4 text-center max-w-[300px]">{descripcion}</p>
    <p class="text-red-700 font-serif">Medidas:</p>
    <p class="text-center text-xl max-w-[300px]">{medidas.join(", ")}</p>
  </div>
</div>
